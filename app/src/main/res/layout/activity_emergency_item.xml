<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"

    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    tools:targetApi="lollipop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/emergName"
        app:layout_constraintTop_toBottomOf="@+id/emergName">


        <TextView
            android:id="@+id/emergName"
            android:layout_width="159dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
         android:clickable="true"
            android:layout_marginLeft="16dp"
            android:fontFamily="casual"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/detail"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_conversion_absoluteHeight="31dp"
            tools:layout_conversion_absoluteWidth="39dp"
            tools:layout_conversion_wrapHeight="82"
            tools:layout_conversion_wrapWidth="103" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="137dp"
            android:layout_height="43dp"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="casual"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="87dp"
            tools:layout_conversion_absoluteWidth="211dp"
            tools:layout_conversion_wrapHeight="82"
            tools:layout_conversion_wrapWidth="103" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>